//create a class book  
package internet;
import java.io.*;
import java.sql.ResultSet;
import java.sql.SQLException;


public class Book {
    private String title;
    private int author_id;
    private String book_isbn;
    private float price;
    private String description;
    private genre_name;
    //takes a database query result and creates a book object
//    public Book(ResultSet rs) throws SQLException {
//        System.out.println(rs);
//    }

    public Book (String title, int author_id, String book_isbn, double priceDouble, String description, String genre_name) {
        this.title = title;
        this.author_id = author_id;
        this.book_isbn = book_isbn;
        this.price = (float) priceDouble;
        this.description = description;
        this.genre_name = genre_name;
    }

	public String getIsbn() {
		return this.book_isbn;
	}
    public String getTitle() {
        return this.title;
    }
    public int getAuthorId() {
        return this.author_id;
    }
    public double getPrice() {
        return this.price;
    }
    public String getDescription() {
        return this.description;
    }

	public int getGenreName() {
		// TODO Auto-generated method stub
		return this.genre_name;
	}
}
